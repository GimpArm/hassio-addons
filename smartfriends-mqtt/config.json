{
    "name": "SmartFriends MQTT",
    "version": "2.0",
    "slug": "smartfriends-mqtt",
    "description": "Control your Smart Friends devices through MQTT",
    "url": "https://github.com/GimpArm/hassio-addons",
    "arch": ["armhf", "armv7", "aarch64", "amd64"],
    "startup": "application",
    "services": [
        "mqtt:need"
    ],
    "boot": "auto",
    "host_network": "false",
    "options": {
        "SmartFriends": {
            "Host": "smartfriends.local",
            "Port": 4300,
            "Username": null,
            "Password": null,
            "CSymbol": "D19033",
            "CSymbolAddon": "i",
            "ShcVersion": "2.21.1",
            "ShApiVersion": "2.20"
        }
    },
	"schema": {
		"SmartFriends": {
			"Host": "str",
			"Port": "int",
			"Username": "str",
			"Password": "password",
			"CSymbol": "str",
			"CSymbolAddon": "str",
			"ShcVersion": "str",
			"ShApiVersion": "str"
		}
	},
    "image": "gimparm/{arch}-smartfriends-mqtt"
}
