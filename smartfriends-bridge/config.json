{
	"name": "SmartFriends Bridge",
	"version": "3.2",
	"slug": "smartfriends-bridge",
	"description": "Control your Smart Friends devices through REST or MQTT",
	"url": "https://github.com/GimpArm/hassio-addons",
	"arch": ["armhf", "armv7", "aarch64", "amd64"],
	"startup": "application",
    "services": [
        "mqtt:need"
    ],
    "boot": "auto",
    "host_network": false,
    "map": [
      "config:rw"
    ],
	"ports": {
		"80/tcp": 5001
	},
	"ports_description": {
		"80/tcp": "REST API port"
	},
	"options": {
		"SmartFriends": {
			"Host": "smartfriends.local",
			"Port": 4300,
			"Username": null,
			"Password": null,
			"CSymbol": "D19033",
			"CSymbolAddon": "i",
			"ShcVersion": "2.21.1",
			"ShApiVersion": "2.20"
		},
        "Mqtt": {
			"Enabled": false,
            "DataPath": "/config/smartfriends2mqtt",
            "BaseTopic": "smartfriends2mqtt",
            "Server": "homeassistant",
            "Port": 1883,
            "User": "mqtt-user",
            "Password": null,
            "UseSsl": false
        }
	},
	"schema": {
		"SmartFriends": {
			"Host": "str",
			"Port": "int",
			"Username": "str",
			"Password": "password",
			"CSymbol": "str",
			"CSymbolAddon": "str",
			"ShcVersion": "str",
			"ShApiVersion": "str"
		},
        "Mqtt": {
			"Enabled": "bool",
            "DataPath": "str",
            "BaseTopic": "str",
            "Server": "str",
            "Port": "int",
            "User": "str",
            "Password": "password?",
            "UseSsl": "bool"
        }
	},
	"image": "gimparm/{arch}-smartfriends-bridge"
}
