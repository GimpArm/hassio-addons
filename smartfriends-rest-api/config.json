{
	"name": "SmartFriends REST API",
	"version": "1.0",
	"slug": "smartfriends-rest-api",
	"description": "Control your Smart Friends devices through a simple REST API",
	"url": "https://github.com/GimpArm/hassio-addons",
	"arch": ["armhf", "armv7", "aarch64", "amd64"],
	"startup": "system",
	"boot": "auto",
	"ports": {
		"5001/tcp": 5001
	},
	"ports_description": {
		"5001/tcp": "REST API port"
	},
	"host_network": "false",
	"options": {
		"SmartFriends": {
			"Host": "smartfriends.local",
			"Port": 4300,
			"Username": null,
			"Password": null,
			"CSymbol": "D19033",
			"CSymbolAddon": "i",
			"ShcVersion": "2.21.1",
			"ShApiVersion": "2.20"
		}
	},
	"schema": {
		"smartFriends": {
			"host": "str",
			"port": "int",
			"username": "str",
			"password": "password",
			"cSymbol": "str",
			"cSymbolAddon": "str",
			"shcVersion": "str",
			"shApiVersion": "str"
		}
	},
	"image": "gimparm/smartfriends-{arch}-rest-api"
}
